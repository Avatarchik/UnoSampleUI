<Application
    x:Class="UnoSampleUI.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:viewModel="using:UnoSampleUI.ViewModels"
    xmlns:local="using:UnoSampleUI">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="_FontSizes.xaml"/>
                <ResourceDictionary Source="_Thickness.xaml"/>
                <ResourceDictionary Source="_TextBlock.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <viewModel:ViewModelLocator x:Key="Locator"/>
        </ResourceDictionary>
    </Application.Resources>
</Application>
